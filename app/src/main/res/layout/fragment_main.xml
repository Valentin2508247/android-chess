<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.MainFragment">


    <Button
        android:id="@+id/bt_create_game"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="create game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <Button
        android:id="@+id/bt_join_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="join game"
        app:layout_constraintEnd_toEndOf="@+id/bt_create_game"
        app:layout_constraintStart_toStartOf="@+id/bt_create_game"
        app:layout_constraintTop_toBottomOf="@+id/bt_create_game" />
</androidx.constraintlayout.widget.ConstraintLayout>